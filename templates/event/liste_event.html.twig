
{% extends '_template.html.twig' %}

{% block title %} Event {% endblock %}

{% block content %}

    <div class="section">
        <h1 class="title"> Event: {{ event_list|length }} </h1>
        <div class="columns is-multiline">
            {% for event in event_list %}
                <div class="column is-one-third">
                    <div class="box">
                        <article class="media">
                            <div class="media-left">
                                <figure class="image is-128x128">
                                    <img src="https://loremflickr.com/256/256/happy/all?lock={{event.id}}" alt="Image">
                                </figure>
                            </div>
                            <div class="media-content">
                                <div class="content">
                                    <p>
                                        <a href="" class="has-text-primary">
                                            <strong>{{event.nom}}</strong>
                                        </a><br>
                                        <small>Date événement:<br> {{ event.date|date('Y.M.j')}}</small><br>
                                        {{event.description|slice(0, 20)}}
                                    </p>
                                </div>
                            </div>
                        </article>
                    </div>
                </div>
            {% endfor %}
    </div>
    </div>

{% endblock %}
